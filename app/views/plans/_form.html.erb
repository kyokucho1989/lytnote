<% if @plan.errors.any? %>
<div class="alert alert-warning my-3" role="alert" >
<h5 class="alert-heading">エラー</h5>
<ul>
  <% @plan.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
<% end %> 

<div class = "container py-5">
  <div class="row">
    <div class="col-md-8">
    <div class="pb-5">
      <div class="card rounded-3">
        <div class="card-body">
          <%= form_with model: @plan, local: true do |f| %>
            <div class="form-group">
            <label for="label-plan" class="form-label">目標</label>
              <%= f.text_field :name ,:class => 'form-control'%>
            </div>
            <div class="form-group">
            <label for="label-genre" class="form-label">ジャンル</label>
              <%= f.collection_select :genre_id, @select_genre, :id, :name, {:include_blank => true}, {class: "form-control"} %>
            </div>
            <div class="form-group">
            <label for="label-deadline" class="form-label">締め切り</label>
            <%= f.date_field :deadline,  {class: "form-control"} %>
            </div>
            <%= f.hidden_field :status, :value => "進行中" %>
            <%= f.submit   "#{title}" ,{class: "btn-primary btn-lg"}%>
          <% end %>
        </div>
      </div>
    </div>
      <%= link_to "#{title}キャンセル（目標一覧へ戻る）", plans_path %>
    </div>
  </div>
</div>