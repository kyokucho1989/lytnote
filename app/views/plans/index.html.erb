<!-- HEADER -->
<%= render "layouts/header", title: "目標一覧" ,  bg_color: "primary" %>

<section id="plan">
  <div class = "container">
    <div class="row">
      <div class="col-md-10">
        <% if @plans.size == 0 %>
          <div class="my-5">
          目標が登録されていません。
          </div>
        <% else %>
          <% @plans.each.with_index(1) do |plan, i| %>
            <div class = "container border my-5">
              <div class="row py-3">
                <div class="col-8">
                  <div class="row">
                    <div class="col-12 col-md-6"><%= plan.name %></div>
                      
                      <div class="col-10 col-md-3 my-2">
                        <div class="genre">
                          <i class="fas fa-tag"></i><%= get_genre_name(plan.genre_id)%>
                        </div>
                      </div>
                      <div class="col-5 col-md-3">
                      <span class="dead-line"><i class="fas fa-calendar-check"></i><%= l plan.deadline, format: :short  %>
                      </div>
                      <div class="col-2">
                      <% if plan.status == "進行中" %>
                      <div class="badge status bg-warning pt-2 pb-2">
                      <% elsif plan.status == "完了" %>
                      <div class="badge status bg-success pt-2 pb-2 ">
                      <% elsif plan.status == "中止" %>
                      <div class="badge status bg-dark pt-2 pb-2">
                      <% end %>
                      <%= plan.status %>
                    </div>
                    </div>

                  </div>
                 
                </div>
                  <div class="col-2 px-2">
                  <%= link_to edit_plan_path(plan) do %>
                    <button type="button" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></button>
                  <% end %>
                  </div>
                  <div class="col-2 px-2">
                  <%= link_to plan_path(plan), method: :delete, data: {confirm: "削除しますか?"} do %>
                    <button type="button" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
                  <% end %>
                  </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <% if @plans.empty? %>
          <%# ページネーション非表示 %>
        <% else %>
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <%= paginate @plans %>
            </ul>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</section>