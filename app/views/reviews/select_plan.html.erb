<%= render "layouts/header", title: "振り返り登録-目標選択" , bg_color: "info" %>
<div class = "container">
  <div class="row">
    <div class="col">
        <%= form_with url: new_review_path, method: :get, local: true do |form| %>
        <% @plans.each do |plan| %>
          <%= form.fields_for 'plans[]', plan do |f| %>
            <p>
              <%= check_box_tag 'checked_plan[]',"#{plan.id}" %>

            目標： <%= plan.name %>
            締め切り：<%=l plan.deadline %>
            ステータス：<%= plan.status %>
            ジャンル：<%= plan.genre_id %>
            </p>
          <% end %>
        <% end %>

        <%= form.submit "登録" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "登録キャンセル（振り返り一覧へ戻る）", reviews_path %>