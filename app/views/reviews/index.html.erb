<%= render "layouts/header", title: "振り返り一覧" , bg_color: "info" %>

<section id="report">
  <div class = "container">
    <div class="row">
      <div class="col-md-9">
        <% if @reviews.size == 0 %>
          <div class="my-5">
          振り返りが登録されていません。
          </div>
        <% else %>
          <% @reviews.each.with_index(1) do |review, i| %>
            <div class="container border my-3">
              <div class="row py-2">
                <div class="col-8">
                  <%= l review.reviewed_on %>
                </div>
                <div class="col-2">
                  <%= link_to review_path(review) do %>
                    <button type="button" class="btn btn-outline-info"><i class="far fa-file-alt mr-1"></i><span class="d-none d-lg-inline">詳細</span></button>
                  <% end %>
                </div>
                <div class="col-2">
                  <%= link_to review_path(review), method: :delete, data: {confirm: "削除しますか?"} do %>
                    <button type="button" class="btn btn-outline-danger"><i class="fas fa-trash-alt mr-1"></i><span class="d-none d-lg-inline">削除</span></button>
                  <% end %>
                </div>
              </div>

              <div class="row px-2">
                <div class="col-12 p-2 mb-2">
                  <%= review.content %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        <% if @reviews.empty? %>
          <%# ページネーション非表示 %>
        <% else %>
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <%= paginate @reviews %>  
            </ul>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</section>  