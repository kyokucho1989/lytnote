<!-- HEADER -->
<%= render "layouts/header", title: "日報一覧" , bg_color: "none" %>

<section id="report">
  <div class = "container">
    <div class="row">
      <div class="col-md-9">
        <% if @reports.size == 0 %>
          <div class="my-5">
          日報が登録されていません。
          </div>
        <% else %>
          <% @reports.each.with_index(1) do |report, i| %>
            <div class="container border my-3">
              <div class="row py-2">
                <div class="col-6">
                  <%= l report.reported_on %>
                </div>
                <div class="col-2">
                  <%= link_to edit_report_path(report) do %>
                    <button type="button" class="btn btn-outline-primary"><i class="fas fa-edit mr-1"></i><span class="d-none d-lg-inline">編集</span></button>
                  <% end %>
                </div>
                <div class="col-2">
                  <%= link_to report_path(report) do %>
                    <button type="button" class="btn btn-outline-info"><i class="far fa-file-alt mr-1"></i><span class="d-none d-lg-inline">詳細</span></button>
                  <% end %>
                </div>
                <div class="col-2">
                  <%= link_to report_path(report), method: :delete, data: {confirm: "削除しますか?"} do %>
                    <button type="button" class="btn btn-outline-danger"><i class="fas fa-trash-alt mr-1"></i><span class="d-none d-lg-inline">削除</span></button>
                  <% end %>
                </div>
                
              </div>
              <% report.report_items.each do |item| %>
                <div class="row mt-4">
                  <div class="col-3 col-md-2">
                    <div class="rounded genre p-1 text-center">
                      <%= @genres_set.assoc(item.genre_id).last %>
                    </div>
                  </div>
                  <div class="col-6 col-md-8">
                    <%= item.content %>
                  </div>
                  <div class="col-3 col-md-2">
                    <%= item.work_hours %>時間
                  </div>
                </div>
              <% end %>
              <hr>
              <div class="row">
                <div class="col-12 mb-2">
                  <%= report.content %>
                </div>
              </div>
            </div>  
          <% end %>
        <% end %>
        
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <%= paginate @reports %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</section>