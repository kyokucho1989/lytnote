<%= render "layouts/header", title: "日報詳細" , bg_color: "none" %>

<div class = "container py-5">
  <div class="row">
    <div class="col-md-8">
      <div class="card rounded-3">
        <div class="card-body">
        <%= form_with model: @report, local: true do |f| %>
          <div class="form-group mb-4">
            <h6><%= l @report.reported_on %></h6>
          </div>
                <% @report_item_array.each do |item| %>                 
                  <div class="row mt-4">
                    <div class="col-6 col-md-8">
                      <div class="row">
                        <div class="col-12 col-md-12">
                          <%= item.content %>
                        </div>
                        <div class="my-2 col-12 col-md-6">
                          <div class="genre">
                          <i class="fas fa-tag"></i><%= get_genre_name(item.genre_id) %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="my-2 col-3 col-md-2">
                      <%= item.work_hours %>時間
                    </div>
                  </div>
                <% end %>
                                
          <hr>
          <div class="form-group mb-4">
          <h6>コメント</h6>
            <div class="card-body">
              <%= @report.content %>
            </div>
          </div>
          <div class="form-group mb-4">
          <h6>共有用文章</h6>
            <div class="card-body bg-light">
            <%= simple_format(@report.content_for_share) %>
            </div>
        </div>
        <% end %>
        </div>
      </div>
    </div>
    
  </div>
  <div class="row px-3 mt-4">
  <%= link_to "日報一覧へ戻る", reports_path %> 
  </div>
  
</div>
